@model AthleteViewModel

@{
}


<h1>Create</h1>

<hr />

<div class="row">
	<div class="col-6">

		<div class="card">

			<div class="card-header">
				<h5>Add a new Athlete</h5>
			</div>

			<div class="card-body">
				<form asp-controller="Welcome" asp-action="AddAthlete" method="post"> 

					<div class="mb-3">
						<label class="form-label">Athlete Name</label>
						<input asp-for=Name type="text" class="form-control" />
					</div>

					<div class="mb-3">
						<label class="form-label">Athlete Age</label>
						<input asp-for=Age type="number" class="form-control" />
					</div>

					<div class="mb-3">
						<label class="form-label">Jersey Number</label>
						<input asp-for=JerseyNumber type="number" class="form-control" />
					</div>

					<div class="mb-3">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>

				</form>
			</div>

			<div class="card-footer">
			</div>


		</div>


	</div>
</div>